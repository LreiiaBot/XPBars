<Page x:Class="XPBars.Pages.InsertPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:XPBars.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="50" d:DesignWidth="400"
      Title="InsertPage">

    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="tbCount" TextAlignment="Center" VerticalContentAlignment="Center"/>
            <ComboBox Name="cbWeight" Grid.Column="1"/>
            <TextBox x:Name="tbDescription" Grid.Column="2" VerticalContentAlignment="Center"/>
            <Button Content="+" x:Name="btnAdd" Grid.Column="3"/>
        </Grid>
    </Grid>
</Page>
